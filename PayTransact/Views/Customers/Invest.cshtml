@model PayTransact.Models.ViewModels.InvestViewModel

@{
    ViewData["Title"] = "Invest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumb">
    <h3>Invest today for the future</h3>
</div>

<div class="col-md-10">
    <form asp-action="Invest" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h3>Please fill in the data.</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="InvestedAmount" class="control-label"></label>
                            <input asp-for="InvestedAmount" class="form-control" />
                            <span asp-validation-for="InvestedAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfPayment" class="control-label"></label>
                            <input asp-for="DateOfPayment" class="form-control" type="date" />
                            <span asp-validation-for="DateOfPayment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save investment" class="btn btn-primary rounded" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h3>Product type</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="ProductId" class="control-label"></label>
                            <select asp-for="ProductId" class="form-control" asp-items="@ViewData["Products"] as SelectList">
                                <option value="" selected>Select product</option>
                            </select>
                        </div>
                    </div>
                    @if (ViewBag.Success != null)
                    {
                    <div class="alert alert-success">
                        @ViewBag.Success
                    </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>