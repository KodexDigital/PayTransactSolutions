@model IEnumerable<PayTransact.Models.Models.Product>
@using PayTransact.Persistence.DAL
@inject AppDbContext context

@{
    ViewData["Title"] = "Product lists";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/font-awesome/css/all.css" rel="stylesheet" />

<table class="table table-dark table-striped" style="font-size:12px">
    <thead>
        <tr>
            <th>
                Sn
            </th>
            <th>
                Product name
            </th>
            <th>
                Amount
            </th>
            <th>
                Description
            </th>
            <th>
                Created date
            </th>
        </tr>
    </thead>
    @{ int sn = 0; }
    @foreach (var item in Model)
    {

        if (Model.Any())
        {
            <tr>
                <td>
                    @{sn++;}@sn
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td colspan="8">
                    <div class="alert alert-danger">No product yet</div>
                </td>
            </tr>
        }
    }
</table>
